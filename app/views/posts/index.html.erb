<h1>Posts</h1>
<% @posts.each do |post| %>
  <div class="post">
    <div class="post-content">
      <%= post.content %>
    </div>
    <div class="post-author">
      <%= post.user.name %>
    </div>
    <div class="post-comments">
      <% post.comments.each do |comment| %>
        <div class="comment">
          <%= comment.content %>
        </div>
      <% end %>
    </div>
    <div class="post-likes">
      <%= post.likes.count %> likes
    </div>
  </div>
<% end %>
